{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2015",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "moduleResolution": "bundler",

    // The path alias for the project.
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }
  }
}
